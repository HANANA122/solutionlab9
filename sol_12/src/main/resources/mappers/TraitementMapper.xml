
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "C:\spring\mybatis-3-mapper.dtd">
<!-- <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> -->

<mapper namespace="dz.sofiane.apt_9.apt9.mappers.TraitmentMappers">



    <resultMap id="traitementResultMap" type="dz.sofiane.apt_9.apt9.models.Traitement">
        <result property="id" column="id" />
        <result property="nom" column="nom" />
    </resultMap>

    <insert id="createTraitement" parameterType="dz.sofiane.apt_9.apt9.models.Traitement">
        INSERT INTO cabinet.traitement(id,nom)
        VALUES (#{id}, #{nom})
    </insert>


    <update id="updateTraitement" parameterType="dz.sofiane.apt_9.apt9.models.Traitement">
        UPDATE cabinet.traitement
        SET motif=#{motif}, date_consultation=#{date_consultation}
        WHERE id=#{id}
    </update>


    <delete id="deletTraitement" parameterType="int">
        DELETE FROM cabinet.traitement WHERE id=#{id}
    </delete>

    <select id="getById" parameterType="string" resultMap="traitementResultMap">
        SELECT * FROM cabinet.traitement WHERE nom = #{nom}
    </select>
    <select id="getAllTraitement" resultMap="traitementResultMap">
        SELECT * FROM cabinet.traitement
    </select>
</mapper>

